{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "es2023"
    ],
    "module": "node16",
    "moduleResolution": "Node16",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "sourceMap": true
  }
}